@model IEnumerable<LeaveRequest>

@if (!Model.Any())
{
    <div class="text-center py-4">
        <i class="fas fa-check-circle fa-2x text-success mb-3"></i>
        <h5 class="text-success">No Pending Requests</h5>
        <p class="text-muted">All leave requests have been processed.</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var request in Model.OrderBy(r => r.CreatedAt))
        {
            var days = (request.EndDate - request.StartDate).Days + 1;
            var canApprove = request.Employee.LeaveBalance >= days || request.LeaveType != "Annual";

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-user me-2"></i>@request.Employee.Name
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <strong>@request.LeaveType Leave</strong>
                        </div>
                        <div class="mb-2">
                            <i class="fas fa-calendar me-2 text-muted"></i>
                            @request.StartDate.ToString("MMM dd") - @request.EndDate.ToString("MMM dd")
                            <span class="badge bg-primary ms-2">@days days</span>
                        </div>
                        <div class="mb-2">
                            <i class="fas fa-building me-2 text-muted"></i>
                            @request.Employee.Department
                        </div>
                        <div class="mb-3">
                            <i class="fas fa-comment me-2 text-muted"></i>
                            <small class="text-muted">@request.Reason</small>
                        </div>
                        <div class="mb-2">
                            <i class="fas fa-clock me-2 text-muted"></i>
                            Applied: @request.CreatedAt.ToString("MMM dd")
                        </div>
                        <div class="mb-3">
                            <i class="fas fa-wallet me-2 text-muted"></i>
                            Balance:
                            <span class="fw-bold @(request.Employee.LeaveBalance < 5 ? "text-danger" : "text-success")">
                                @request.Employee.LeaveBalance days
                            </span>
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="d-grid gap-2">
                            @if (canApprove)
                            {
                                <button class="btn btn-success btn-sm"
                                        onclick="approveLeave(@request.Id, '@request.Employee.Name', @days, '@request.LeaveType')">
                                    <i class="fas fa-check me-1"></i>Approve
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-success btn-sm" disabled
                                        title="Insufficient leave balance">
                                    <i class="fas fa-check me-1"></i>Approve
                                </button>
                            }
                            <button class="btn btn-danger btn-sm"
                                    onclick="rejectLeave(@request.Id, '@request.Employee.Name')">
                                <i class="fas fa-times me-1"></i>Reject
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}