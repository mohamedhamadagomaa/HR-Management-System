@model IEnumerable<LeaveRequest>

<div class="alert alert-info">
    <h6>Debug Information:</h6>
    <p>Total Leave Requests: @Model.Count()</p>
    <p>Pending: @Model.Count(lr => lr.Status == "Pending")</p>
    <p>Approved: @Model.Count(lr => lr.Status == "Approved")</p>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Days</th>
            <th>Type</th>
            <th>Balance (Official)</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            var days = (request.EndDate - request.StartDate).Days + 1;
            // Calculate the projected new balance if this request is Annual and Approved
            var employeeBalance = request.Employee?.LeaveBalance ?? 0;
            var projectedNewBalance = employeeBalance - days;

            <tr>
                <td>@request.Employee.Name</td>
                <td>@request.StartDate.ToString("MMM dd, yyyy")</td>
                <td>@request.EndDate.ToString("MMM dd, yyyy")</td>
                <td>@days days</td>
                <td>
                    <span class="badge bg-info">@request.LeaveType</span>
                </td>
                <td>
                    <span class="fw-bold @(employeeBalance < days ? "text-danger" : "text-success")">
                        @employeeBalance days
                    </span>
                    @if (request.LeaveType == "Annual" && request.Status == "Pending")
                    {
                        <br />
                        <small class="text-muted">
                            New:
                            <span class="@(projectedNewBalance < 0 ? "text-danger" : "text-success")">
                                @projectedNewBalance days
                            </span>
                        </small>
                    }
                </td>
                <td>
                    <span class="badge @(request.Status == "Approved" ? "bg-success" : request.Status == "Rejected" ? "bg-danger" : "bg-warning")">
                        @request.Status
                    </span>
                </td>
                <td>
                    @if (request.Status == "Pending")
                    {
                        // Add data-projected-balance attribute to the Approve button for better context in the JS/Modal
                        <button class="btn btn-success btn-sm" onclick="approveLeave(@request.Id, '@request.Employee.Name', @days, @projectedNewBalance)">
                            <i class="fas fa-check"></i> Approve
                        </button>
                        <button class="btn btn-danger btn-sm" onclick="rejectLeave(@request.Id)">
                            <i class="fas fa-times"></i> Reject
                        </button>
                    }
                    else
                    {
                        <span class="text-muted">Processed</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>