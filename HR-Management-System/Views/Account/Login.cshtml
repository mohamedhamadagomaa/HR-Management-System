@model LoginViewModel
@{
    ViewData["Title"] = "Login with User ID";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-5">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title mb-0">
                    <i class="fas fa-sign-in-alt me-2"></i>HR System Login
                </h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="UserId" class="form-label">
                            <i class="fas fa-id-card me-1"></i>User ID
                        </label>
                        <input asp-for="UserId" class="form-control" placeholder="Enter your User ID (e.g., ADMIN001)" />
                        <div class="form-text">Use your assigned User ID, not email address</div>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock me-1"></i>Password
                        </label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    @* <div class="mb-3 form-check"> *@
                    @*     <input asp-for="RememberMe" class="form-check-input" /> *@
                    @*     <label asp-for="RememberMe" class="form-check-label">Remember me on this device</label> *@
                    @* </div> *@

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Login with User ID
                        </button>
                    </div>
                </form>

                @* <div class="mt-3 text-center"> *@
                @*     <p>Don't have an account? <a href="/Account/Register" class="text-decoration-none">Register new employee</a></p> *@
                @* </div> *@

                <!-- Demo Accounts Info -->
                @* <div class="mt-4 p-3 bg-light rounded"> *@
                @*     <h6 class="mb-2"> *@
                @*         <i class="fas fa-info-circle me-2"></i>Demo Accounts *@
                @*     </h6> *@
                @*     <small class="text-muted"> *@
                @*         <strong>Admin:</strong> UserID: <code>ADMIN001</code>, Password: <code>Password123!</code><br> *@
                @*         <strong>HR:</strong> UserID: <code>HR001</code>, Password: <code>Password123!</code><br> *@
                @*         <strong>Manager:</strong> UserID: <code>MGR001</code>, Password: <code>Password123!</code><br> *@
                @*         <strong>Employees:</strong> UserID: <code>EMP001</code> to <code>EMP005</code>, Password: <code>Password123!</code> *@
                @*     </small> *@
                @*     <div class="mt-2"> *@
                @*         <small class="text-danger"> *@
                @*             <i class="fas fa-exclamation-triangle me-1"></i> *@
                @*             <strong>Note:</strong> Use User ID above, not email address! *@
                @*         </small> *@
                @*     </div> *@
                @* </div> *@
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Focus on UserId field
            $('#UserId').focus();

            // Add demo account quick fill
            $('.demo-account').click(function() {
                var userId = $(this).data('userid');
                $('#UserId').val(userId);
                $('#Password').val('Password123!');
                $('#Password').focus();
            });
        });
    </script>
}