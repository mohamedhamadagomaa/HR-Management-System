@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card mt-5">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title mb-0">
                    <i class="fas fa-ban me-2"></i>Access Denied
                </h3>
            </div>
            <div class="card-body">
                <i class="fas fa-lock fa-5x text-muted mb-4"></i>
                <h4 class="text-danger mb-3">You don't have permission to access this resource.</h4>
                <p class="text-muted mb-4">
                    Please contact your system administrator if you believe this is an error.
                </p>
                <div class="d-grid gap-2">
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Go to Dashboard
                    </a>
                    <a href="/Account/Logout" class="btn btn-outline-secondary">
                        <i class="fas fa-sign-out-alt me-2"></i>Login as Different User
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>