@model IEnumerable<Payroll>
@{
    ViewData["Title"] = "Manage Payroll";
    var selectedPeriod = ViewBag.SelectedPeriod as string;
    var previousPeriod = ViewBag.PreviousPeriod as string;
    var nextPeriod = ViewBag.NextPeriod as string;
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">
        <i class="fas fa-money-bill-wave me-2"></i>Payroll Management
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/Payroll/Generate" class="btn btn-success me-2">
            <i class="fas fa-calculator me-1"></i>Generate Payroll
        </a>
    </div>
</div>

<!-- Period Navigation -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="card-title mb-0">
                    Payroll Period: <strong>@DateTime.ParseExact(selectedPeriod, "yyyy-MM", null).ToString("MMMM yyyy")</strong>
                </h5>
            </div>
            <div class="col-md-6 text-end">
                <div class="btn-group">
                    <a href="/Payroll/Manage?period=@previousPeriod" class="btn btn-outline-primary">
                        <i class="fas fa-chevron-left me-1"></i>Previous
                    </a>
                    <a href="/Payroll/Manage?period=@nextPeriod" class="btn btn-outline-primary">
                        Next <i class="fas fa-chevron-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Payroll Summary -->
<div class="row mb-4" id="payrollSummary">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-pie me-2"></i>Payroll Summary
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading payroll summary...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Payroll List -->
<div class="card">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Employee Payrolls</h5>
        <span class="badge bg-primary">@Model.Count() Employees</span>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-calculator fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No Payroll Data</h4>
                <p class="text-muted">No payroll records found for the selected period.</p>
                <a href="/Payroll/Generate" class="btn btn-primary mt-2">
                    <i class="fas fa-calculator me-1"></i>Generate Payroll
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="payrollTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Employee</th>
                            <th>Department</th>
                            <th>Base Salary</th>
                            <th>Allowances</th>
                            <th>Deductions</th>
                            <th>Net Pay</th>
                            <th>Generated On</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payroll in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@payroll.Employee.Name</strong>
                                    <br>
                                    <small class="text-muted">@payroll.Employee.Position</small>
                                </td>
                                <td>
                                    <span class="badge bg-info">@payroll.Employee.Department</span>
                                </td>
                                <td>$@payroll.BaseSalary.ToString("N2")</td>
                                <td class="text-success">+$@payroll.Allowances</td>
                                <td class="text-danger">-$@payroll.Deductions</td>
                                <td>
                                    <strong class="text-primary">$@payroll.NetPay.ToString("N2")</strong>
                                </td>
                                <td>@payroll.GeneratedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/Payroll/Details/@payroll.Id" class="btn btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/Payroll/ExportPdf/@payroll.Id" class="btn btn-outline-success" target="_blank">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load payroll summary
            loadPayrollSummary('@selectedPeriod');

            // Initialize DataTable
            $('#payrollTable').DataTable({
                "order": [[5, "desc"]], // Sort by Net Pay descending
                "responsive": true
            });
        });

        function loadPayrollSummary(period) {
            $.ajax({
                url: '/Payroll/GetPayrollSummary',
                type: 'GET',
                data: { period: period },
                success: function(data) {
                    if (data.success) {
                        var summary = data.summary;
                        var summaryHtml = `
                            <div class="row text-center">
                                <div class="col-md-2 mb-3">
                                    <div class="border rounded p-3">
                                        <div class="text-muted">Total Employees</div>
                                        <div class="h4 text-primary">${summary.TotalEmployees}</div>
                                    </div>
                                </div>
                                <div class="col-md-2 mb-3">
                                    <div class="border rounded p-3">
                                        <div class="text-muted">Base Salary</div>
                                        <div class="h4 text-info">$${summary.TotalBaseSalary.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}</div>
                                    </div>
                                </div>
                                <div class="col-md-2 mb-3">
                                    <div class="border rounded p-3">
                                        <div class="text-muted">Allowances</div>
                                        <div class="h4 text-success">$${summary.TotalAllowances.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}</div>
                                    </div>
                                </div>
                                <div class="col-md-2 mb-3">
                                    <div class="border rounded p-3">
                                        <div class="text-muted">Deductions</div>
                                        <div class="h4 text-danger">$${summary.TotalDeductions.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}</div>
                                    </div>
                                </div>
                                <div class="col-md-2 mb-3">
                                    <div class="border rounded p-3">
                                        <div class="text-muted">Total Cost</div>
                                        <div class="h4 text-warning">$${(summary.TotalBaseSalary + summary.TotalAllowances).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}</div>
                                    </div>
                                </div>
                                <div class="col-md-2 mb-3">
                                    <div class="border rounded p-3 bg-light">
                                        <div class="text-muted">Net Pay</div>
                                        <div class="h4 text-success">$${summary.TotalNetPay.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}</div>
                                    </div>
                                </div>
                            </div>
                        `;
                        $('#payrollSummary .card-body').html(summaryHtml);
                    }
                },
                error: function() {
                    $('#payrollSummary .card-body').html('<p class="text-danger">Failed to load payroll summary</p>');
                }
            });
        }
    </script>
}