@model IEnumerable<Payroll>
@{
    ViewData["Title"] = "My Payslips";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">
        <i class="fas fa-file-invoice-dollar me-2"></i>My Payslips
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <span class="me-3 text-muted">Your Salary History</span>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No Payslips Available</h4>
        <p class="text-muted">Your payroll records will appear here once processed.</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var payroll in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-success text-white">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-calendar-alt me-2"></i>
                            @payroll.PayPeriod.ToString("MMMM yyyy")
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-6">
                                <small class="text-muted">Base Salary</small>
                                <div class="fw-bold">$@payroll.BaseSalary.ToString("N2")</div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Allowances</small>
                                <div class="fw-bold text-success">+$@payroll.Allowances</div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">Deductions</small>
                                <div class="fw-bold text-danger">-$@payroll.Deductions</div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Net Pay</small>
                                <div class="fw-bold fs-5 text-primary">$@payroll.NetPay.ToString("N2")</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <small class="text-muted">Generated on</small>
                                <div>@payroll.GeneratedAt.ToString("MMM dd, yyyy")</div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="d-grid gap-2">
                            <a href="/Payroll/Details/@payroll.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i>View Details
                            </a>
                            <a href="/Payroll/ExportPdf/@payroll.Id" class="btn btn-outline-success btn-sm" target="_blank">
                                <i class="fas fa-download me-1"></i>Download PDF
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}