@{
    ViewData["Title"] = "HR Management System";
}

<div class="row align-items-center min-vh-80">
    <div class="col-lg-6">
        <h1 class="display-4 fw-bold text-primary mb-4">
            HR Management System
        </h1>
        <p class="lead mb-4">
            Streamline your human resources processes with our comprehensive leave and payroll management system.
        </p>
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="d-flex align-items-center">
                    <i class="fas fa-user-check text-success me-3 fa-2x"></i>
                    <div>
                        <h5>Employee Management</h5>
                        <p class="text-muted mb-0">Complete employee records</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="d-flex align-items-center">
                    <i class="fas fa-calendar-alt text-info me-3 fa-2x"></i>
                    <div>
                        <h5>Leave Tracking</h5>
                        <p class="text-muted mb-0">Automated leave workflows</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="d-flex align-items-center">
                    <i class="fas fa-money-bill-wave text-warning me-3 fa-2x"></i>
                    <div>
                        <h5>Payroll Processing</h5>
                        <p class="text-muted mb-0">Accurate payroll calculations</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="d-flex align-items-center">
                    <i class="fas fa-chart-bar text-danger me-3 fa-2x"></i>
                    <div>
                        <h5>Analytics & Reports</h5>
                        <p class="text-muted mb-0">Comprehensive reporting</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-4">
            <a href="/Account/Register" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-user-plus me-2"></i>Register Now
            </a>
            <a href="/Account/Login" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-sign-in-alt me-2"></i>LogIn Now
            </a>
        </div>
    </div>
    <div class="col-lg-6 text-center">
        <div class="bg-primary text-white rounded p-5">
            <i class="fas fa-building fa-8x opacity-50"></i>
        </div>
    </div>
</div>